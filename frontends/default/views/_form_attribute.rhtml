<% scope ||= nil %>
<% if column.form_ui == :hidden %>
  <%= active_scaffold_input_for column, scope %>
<% else %>
<dl>
  <dt>
    <label for="<%= "record_#{column.name}" %>"><%= column.label %></label>
  </dt>
  <dd>
    <%= active_scaffold_input_for column, scope %>
    <% if column.description -%>
      <span class="description"><%= column.description %></span>
    <% end -%>
  </dd>
</dl>
<% end %>